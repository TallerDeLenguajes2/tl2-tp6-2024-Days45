@model EspacioTp5.Clientes

<h2>Editar Cliente</h2>
<form asp-action="Modificar" method="post">
    <input type="hidden" name="idCliente" value="@Model.IdCliente" />
    <div class="mb-3">
        <label class="form-label">Nombre</label>
        <input type="text" name="nombre" class="form-control" value="@Model.Nombre" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Email</label>
        <input type="email" name="email" class="form-control" value="@Model.Email" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Tel√©fono</label>
        <input type="text" name="telefono" class="form-control" value="@Model.Telefono" required />
    </div>
    <button type="submit" class="btn btn-success">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>