@model List<EspacioTp5.Clientes>

@{
    ViewData["Title"] = "Lista de Clientes";
}

<h2>Lista de Clientes</h2>
<a asp-action="Crear" class="btn btn-primary">Agregar Cliente</a>
<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Email</th>
            <th>Tel√©fono</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.Nombre</td>
                <td>@cliente.Email</td>
                <td>@cliente.Telefono</td>
                <td>
                    <a asp-action="Modificar" asp-route-id="@cliente.IdCliente" class="btn btn-warning">Editar</a>
                    <a asp-action="Eliminar" asp-route-id="@cliente.IdCliente" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>