@model EspacioTp5.Productos

@{
    ViewData["Title"] = "Modificar Producto";
}

<section class="container py-5">
    <h2 class="border-bottom my-4 text-center">Modificar Producto</h2>

    <form asp-controller="Productos" asp-action="Modificar" method="post"
        class="w-50 mx-auto bg-light p-4 rounded shadow-sm">
        <input type="hidden" asp-for="IdProducto" />
        <div class="form-group mb-3">
            <label for="Descripcion" class="form-label">Descripci√≥n</label>
            <input asp-for="Descripcion" class="form-control" required />
        </div>

        <div class="form-group mb-3">
            <label for="Precio" class="form-label">Precio</label>
            <input asp-for="Precio" class="form-control" required />
        </div>

        <!-- Botones -->
        <div class="d-flex justify-content-between mt-4">
            <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
            <a href="@Url.Action("Index", "Productos")" class="btn btn-outline-secondary">Cancelar</a>
        </div>
    </form>
</section>
