@model IEnumerable<EspacioTp5.Productos> 

@{
    ViewData["Title"] = "Lista de Productos";
}

<h1>@ViewData["Title"]</h1>

<!-- Tabla que lista los productos -->
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Descripci√≥n</th>
            <th>Precio</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Model) 
        {
            <tr>
                <td>@producto.IdProducto</td>
                <td>@producto.Descripcion</td>
                <td>@producto.Precio</td>
                <td>
                    <!-- Botones para Editar y Eliminar -->
                    <a href="@Url.Action("Modificar", "Productos", new { id = producto.IdProducto })" class="btn btn-primary">Editar</a>
                    <a href="@Url.Action("Eliminar", "Productos", new { id = producto.IdProducto })" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Enlace para crear un nuevo producto -->
<a href="@Url.Action("Crear", "Productos")" class="btn btn-success">Crear Nuevo Producto</a>
