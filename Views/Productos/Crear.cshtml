@{
    ViewData["Title"] = "Crear Producto";
}

@model EspacioTp5.Productos

<section class="container py-5">
    <h2 class="border-bottom my-4 text-center">Crear Producto</h2>

    <!-- Formulario -->
    <form asp-controller="Productos" asp-action="Crear" method="post" class="w-50 mx-auto bg-light p-4 rounded shadow-sm">
        <!-- Descripción -->
        <div class="form-group mb-3">
            <label for="Descripcion" class="form-label">Descripción</label>
            <div class="input-group">
                <span class="input-group-text" id="descripcion-addon">#</span>
                <input asp-for="Descripcion" class="form-control" aria-describedby="descripcion-addon" required />
            </div>
        </div>

        <!-- Precio -->
        <div class="form-group mb-3">
            <label for="Precio" class="form-label">Precio</label>
            <div class="input-group">
                <span class="input-group-text" id="precio-addon">$</span>
                <input asp-for="Precio" class="form-control" aria-describedby="precio-addon" required />
            </div>
        </div>

        <!-- Botones -->
        <div class="d-flex justify-content-between mt-4">
            <input type="submit" value="Crear Producto" class="btn btn-primary" />
            <input type="reset" value="Borrar formulario" class="btn btn-outline-secondary" />
        </div>
    </form>

    <!-- Enlace para volver -->
    <div class="text-center mt-4">
        <a href="@Url.Action("Index", "Productos")" class="btn btn-link">Volver a la lista de productos</a>
    </div>
</section>
