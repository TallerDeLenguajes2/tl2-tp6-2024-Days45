@model EspacioTp5.Productos

@{
    ViewData["Title"] = "Crear Producto";
}

<h1>@ViewData["Title"]</h1>

<h2>Agregar un nuevo producto</h2>

<form asp-action="Crear" method="post">
    <div class="form-group">
        <label for="Descripcion">Descripci√≥n</label>
        <input type="text" class="form-control" id="Descripcion" name="Descripcion" value="@Model?.Descripcion" required />
    </div>

    <div class="form-group">
        <label for="Precio">Precio</label>
        <input type="number" class="form-control" id="Precio" name="Precio" value="@Model?.Precio" required />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Crear Producto</button>
    </div>
</form>

<br />
<a href="@Url.Action("Index", "Productos")">Volver a la lista de productos</a>
