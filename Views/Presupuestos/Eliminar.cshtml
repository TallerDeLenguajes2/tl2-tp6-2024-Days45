@model EspacioTp5.Presupuestos

@{
    ViewData["Title"] = "Eliminar Presupuesto";
}

@if (Model == null)
{
    <div class="alert alert-danger">
        No se encontró el presupuesto solicitado.
    </div>
}
else
{
    <h2>@ViewData["Title"]</h2>

    <div class="alert alert-warning" role="alert">
        ¿Estás seguro de que deseas eliminar el presupuesto de @Model.Cliente.Nombre?
    </div>

    <form asp-action="EliminarPresupuesto" method="post">
    <input type="hidden" name="id" value="@Model.IdPresupuesto" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
</form>

}
