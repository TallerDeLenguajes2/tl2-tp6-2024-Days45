@model EspacioTp5.Presupuestos

@{
    ViewData["Title"] = "Agregar Producto";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="AgregarProducto" method="post">
    <input type="hidden" name="idPresupuesto" value="@Model.IdPresupuesto" /> <!-- Usar el IdPresupuesto del modelo -->

    <div class="form-group">
        <label for="ProductoId">Producto</label>
        <select class="form-control" id="ProductoId" name="idProducto">
            @foreach (var producto in ViewBag.Productos)
            {
                <option value="@producto.IdProducto">@producto.Descripcion</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="Cantidad">Cantidad</label>
        <input type="number" class="form-control" id="Cantidad" name="cantidad" required />
    </div>

    <button type="submit" class="btn btn-primary">Agregar Producto</button>
</form>
