@model EspacioTp5.Presupuestos

<h1>Modificar Presupuesto</h1>

<form method="post">
    <div class="form-group">
        <label for="nombreDestinatario">Nombre Destinatario</label>
        <input type="text" class="form-control" id="nombreDestinatario" name="nombreDestinatario" value="@Model.NombreDestinatario" required />
    </div>

    <div class="form-group">
        <label for="fechaCreacion">Fecha de Creaci√≥n</label>
        <input type="date" class="form-control" id="fechaCreacion" name="fechaCreacion" value="@Model.FechaCreacion.ToString("yyyy-MM-dd")" required />
    </div>

    <button type="submit" class="btn btn-warning">Modificar</button>
</form>
