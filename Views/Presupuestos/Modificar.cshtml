@model EspacioTp5.Presupuestos

<h1>Modificar Presupuesto</h1>

<form method="post">
    <div class="form-group">
        <label for="nombreCliente">Nombre del Cliente</label>  <!-- Cambio: Mostrar nombre del cliente -->
        <input type="text" class="form-control" id="nombreCliente" name="nombreCliente" value="@Model.Cliente.Nombre" required />
    </div>

    <div class="form-group">
        <label for="emailCliente">Email del Cliente</label>  <!-- Campo adicional para email del cliente -->
        <input type="email" class="form-control" id="emailCliente" name="emailCliente" value="@Model.Cliente.Email" required />
    </div>

    <div class="form-group">
        <label for="fechaCreacion">Fecha de Creaci√≥n</label>
        <input type="date" class="form-control" id="fechaCreacion" name="fechaCreacion" value="@Model.FechaCreacion.ToString("yyyy-MM-dd")" required />
    </div>

    <button type="submit" class="btn btn-warning">Modificar</button>
</form>
