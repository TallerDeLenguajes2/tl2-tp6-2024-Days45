@model EspacioTp5.ViewModels.PresupuestosViewModel

@{
    ViewData["Title"] = "Modificar Presupuesto";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Modificar" method="post">
    <input type="hidden" name="idPresupuesto" value="@Model.IdPresupuesto" />

    <div class="form-group">
        <label for="FechaCreacion">Fecha de Creaci√≥n</label>
        <input type="date" class="form-control" id="FechaCreacion" name="fechaCreacion" value="@Model.FechaCreacion.ToString("yyyy-MM-dd")" required />
    </div>

    <div class="form-group">
        <label for="IdClienteSeleccionado">Cliente</label>
        <select class="form-control" id="IdClienteSeleccionado" name="IdClienteSeleccionado">
            @foreach (var cliente in Model.Clientes)
            {
                <option value="@cliente.IdCliente">@cliente.Nombre</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Modificar</button>
</form>
