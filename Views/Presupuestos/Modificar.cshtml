@model EspacioTp5.Presupuestos

<h1>Modificar Presupuesto</h1>

<form method="post" action="/Presupuestos/Modificar">
    <div class="form-group">
        <label for="clienteId">Cliente</label>
        <select class="form-control" id="clienteId" name="clienteId" required>
            @Html.Raw(ViewBag.OpcionesClientes)
        </select>
    </div>

    <div class="form-group">
        <label for="fechaCreacion">Fecha de Creaci√≥n</label>
        <input type="date" class="form-control" id="fechaCreacion" name="fechaCreacion" 
               value="@Model.FechaCreacion.ToString("yyyy-MM-dd")" required />
    </div>

    <button type="submit" class="btn btn-warning">Modificar</button>
</form>
