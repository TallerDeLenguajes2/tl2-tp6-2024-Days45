@model IEnumerable<EspacioTp5.Presupuestos>

@{
    ViewData["Title"] = "Lista de Presupuestos";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Cliente</th>
            <th>Fecha Creaci√≥n</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var presupuesto in Model)
        {
            <tr>
                <td>@presupuesto.Cliente.Nombre</td>
                <td>@presupuesto.FechaCreacion.ToString("dd/MM/yyyy")</td>
                <td>
                    <a href="@Url.Action("Modificar", new { id = presupuesto.IdPresupuesto })" class="btn btn-warning">Modificar</a>
                    <a href="@Url.Action("Eliminar", new { id = presupuesto.IdPresupuesto })" class="btn btn-danger">Eliminar</a>
                    <a href="@Url.Action("VerDetalle", new { id = presupuesto.IdPresupuesto })" class="btn btn-info">Ver Detalle</a>
                    <!-- Enlace para agregar producto -->
                    <a href="@Url.Action("AgregarProducto", new { id = presupuesto.IdPresupuesto })" class="btn btn-success">Agregar Producto</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Crear")" class="btn btn-success">Nuevo Presupuesto</a>
