@model EspacioTp5.Presupuestos

@{
    ViewData["Title"] = "Ver Detalle del Presupuesto";
}

<h2>@ViewData["Title"]</h2>

<div class="mb-3">
    <strong>Cliente:</strong> @Model.Cliente.Nombre
</div>

<div class="mb-3">
    <strong>Fecha de Creaci√≥n:</strong> @Model.FechaCreacion.ToString("dd/MM/yyyy")
</div>

<h3>Detalles del Presupuesto</h3>

<table class="table">
    <thead>
        <tr>
            <th>Producto</th>
            <th>Cantidad</th>
            <th>Precio Unitario</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var detalle in Model.Detalle)
        {
            <tr>
                <td>@detalle.Producto.Descripcion</td>
                <td>@detalle.Cantidad</td>
                <td>@detalle.Producto.Precio</td> <!-- Muestra solo el precio sin formato -->
                <td>@(detalle.Cantidad * detalle.Producto.Precio)</td> <!-- Muestra solo el total sin formato -->
            </tr>
        }
    </tbody>
</table>

<div class="mb-3">
    <strong>Total del Presupuesto:</strong> @Model.MontoPresupuesto() <!-- Muestra solo el total sin formato -->
</div>

<a href="@Url.Action("Index")" class="btn btn-secondary">Volver a la Lista</a>
